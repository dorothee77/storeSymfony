{% extends "base.html.twig" %}

{% block title %}Ma boutique: produits
{% endblock %}

{% block body %}
	<section>
		<h1>les produits :
		</h1>
		{# viens de controller detailProduct  #}
		{% for product in products %}
			<article>
				<h2>
					{{ product.name }}</h2>
				{# {% if product.category is null %} #}
					<div class="metainfo">
						la categorie
						<strong>{{ product.category.name }}</strong>
					</div>
				{# {% endif %} #}

				<div>Quantit√© :
					{{ product.quantite }} en stock</div>
				<p>Prix :
					{{ product.unitprice }}
					euros</p>
				<a href="{{ path('delete_prod', {'id':product.id})}}" class="btn btn-primary">
					Delete</a>
				<a href="{{ path('add_product', {'id':product.id}) }}" class="btn btn-success">
					modif produit</a>
			</article>

		{% endfor %}
		<br>
		<a href="{{ path('new_product') }}" class="btn btn-warning">
			nouveau produit</a>
	</section>

	<br><br>
{% endblock %}
